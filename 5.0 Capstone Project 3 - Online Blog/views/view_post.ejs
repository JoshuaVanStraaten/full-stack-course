<%- include("partials/header.ejs") %>

<section id="single-post" class="container py-5">
    <article class="bg-white p-4 p-md-5 shadow rounded">

        <!-- Title -->
        <h1 class="display-5 fw-bold text-dark mb-3"><%= post.title %></h1>

        <!-- Metadata -->
        <p class="text-muted mb-4">
            <small>
                <%= new Date(post.date).toLocaleDateString("en-US", {
                    year: "numeric", month: "long", day: "numeric"
                }) %> by <strong><%= post.author %></strong>
            </small>
        </p>

        <!-- Content -->
        <pre class="fs-5 lh-lg" style="white-space:pre-wrap;"><%= post.content %></pre>

        <!-- Action buttons -->
        <div class="d-flex justify-content-end mt-5 gap-2">
            <a href="/edit/<%= post.id %>" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <form action="/delete/<%= post.id %>" method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this post?');"
                  class="d-inline-block m-0 p-0">
                <button type="submit" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        </div>

    </article>
</section>


<%- include("partials/footer.ejs") %>
